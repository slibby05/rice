#!/bin/bash

echo "rice" > rice.out
echo "kics2" > kics2.out
echo "time" > time.out
echo "rice output" > riceOut.out

# do all the initial compiling with PAKCS, so we don't have to wait for it to restart after kics
for V in $(ls *.curry)
do 
    echo compiling ${V%.*}
    pakcs :l ${V%.*} :q
done

for V in $(ls *.curry)
do
    echo "******************************" >> kics2.out
    echo ${V%.*} >> kics2.out
    echo "******************************" >> kics2.out
    echo "******************************" >> rice.out
    echo ${V%.*} >> rice.out
    echo "******************************" >> rice.out
    echo "******************************" >> riceOut.out
    echo ${V%.*} >> riceOut.out
    echo "******************************" >> riceOut.out
    echo "******************************" >> time.out
    echo ${V%.*} >> time.out
    echo "******************************" >> time.out
    echo "kics2" >> time.out
    /home/steven/opt/kics2/bin/kics2 :set +time :l ${V%.*} :eval main :q 2>> time.out >> kics2.out
    echo "rice" >> time.out
    rice -d -f -o -i ${V%.*} >> rice.out
    { time  ./${V%.*} >> riceOut.out ; } 2>> time.out
done
