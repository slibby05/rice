\def\dedication{%
    \chapter*{Dedication}
}

\def\prefacesection#1{%
    \clearpage
    \ifdefined\phantomsection {\phantomsection} \fi
    \addcontentsline{toc}{chapter}{#1}
    \chapter*{#1}
}

\def\afterpreface{
    \begin{singlespace}
    \pagestyle{fancy}
    \tableofcontents
    \thispagestyle{fancy}
    \newpage
    \end{singlespace}
    \pagestyle{fancy}
    \iftablespage
        \clearpage
        \ifdefined\phantomsection {\phantomsection} \fi
        \addcontentsline{toc}{chapter}{List of Tables}
        \begin{singlespace}
        \pagestyle{fancy}
        \listoftables
        \thispagestyle{fancy}
        \newpage
        \end{singlespace}
    \fi
    \iffigurespage
        \clearpage
        \ifdefined\phantomsection {\phantomsection} \fi
        \addcontentsline{toc}{chapter}{List of Figures}
        \begin{singlespace}
        \pagestyle{fancy}
        \listoffigures
        \thispagestyle{fancy}
        \newpage
        \end{singlespace}
    \fi
}

\def\abstractpage{
    \newpage
    \pagenumbering{arabic}
    \setcounter{page}{1}
    \def\@makeschapterhead##1{
        \vspace*{0.25in}
        { \center \MakeUppercase{##1}\par
          \nobreak \vskip 40pt }
    }
    \chapter*{Abstract}
    An abstract of the dissertation of \@author\ for the \degreeType\ in
    \@dept\ presented \@grantmonth\ \@grantday, \@grantyear. \\
    \vskip.25in
    \hskip-.25in \expandafter{Title: \@titleline} \\ [0.25in]
    \vskip.25in
    \thispagestyle{empty}
}

\def\body{
    % no more bottom page numbers anywhere,
    % so recover the space for text
    \textheight 8.4in
    \footskip 0.0in
    \pagenumbering{arabic}
    % Heading contains only the page number in the upper right corner.
    \pagestyle{fancy}
    % \def\chaptermark##1{}
}

% Redefine \thebibliography to go to a new page and put an entry in the
% Table of Contents
\def\thebibliography#1{%
    \chapter*{References}
    \list {[\arabic{enumi}]}{\settowidth\labelwidth{[#1]}\leftmargin\labelwidth
    \advance\leftmargin\labelsep \usecounter{enumi} }
    \usecounter{enumi}
    \def\newblock{\hskip .11em plus .33em minus .07em}
    \sloppy\clubpenalty4000\widowpenalty4000
    \sfcode`\.=1000\relax}

% Redefine \thebibliography to not use any page headings except the
% page number.
\let\@ldthebibliography\thebibliography
\renewcommand{\thebibliography}[1]{
    \newpage
    \ifdefined\phantomsection {\phantomsection} \fi
    \addcontentsline{toc}{chapter}{References}
    \@ldthebibliography{#1}
}

% Redefine \@makeschapterhead and \@makechapterhead so they start
% out at the top of the page.
\def\@makeschapterhead#1{
    \vspace*{0.2in}
    {\sc \center  #1\par
    \nobreak \vskip 40pt }
}

% PSU wants 12 pt everything.
\def\@makechapterhead#1{
    \vspace*{0.2in}
    { \center
    \ifnum \c@secnumdepth >\m@ne \@chapapp{} \thechapter \par
    \vskip 12pt \fi  \MakeUppercase{#1}\par
    \nobreak \vskip 40pt }

    % Page numbers on chapter heading pages are "suggested" for paper
    % dissertations and "required" for electronic dissertations.
    \thispagestyle{fancy}
}

